#!/usr/bin/env bash
set -eu -o pipefail

delete_swap() {
  local dir
  local regex=$2
  local cmd=
  local files=
  dir=$(echo "$1" | sed -e "s/\/*$//")
  cmd="find $dir -type f -iregex \"$regex\" -not -iregex \"\.svg$\""
  files=$(eval "$cmd")
  IFS=$'\n'
  files=($files)

  if [[ ! $dir ]]; then echo "No directory provided"; exit 1; fi
  if [[ ! -d $dir ]]; then echo "$1 is not a directory"; exit 1; fi

  if [[ ${#files} = 0 ]]; then return; fi
  (IFS=$'\n' && echo "${files[*]}")
  echo "Delete these files? (y/n)"

  read -r ANSWER
  if [[ $ANSWER == "y" ]]; then
    remove_files "${files[@]}"
  else
    echo "Cancelled"
  fi
}

remove_files() {
  for file in "$@"
  do
    rm -f "$file"
  done
}

SWPREGEX="s[uvw][a-z]"
DIRSWP_REGEX=".*/\.${SWPREGEX}$"
FILESWP_REGEX=".*/\.[a-zA-Z0-9%_()| \.]*\.${SWPREGEX}$"


for dir in "$@"
do
  delete_swap "$dir" "$DIRSWP_REGEX"
  delete_swap "$dir" "$FILESWP_REGEX"
done
