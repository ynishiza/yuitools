#!/usr/bin/env bash
#
# watch command
#
set -euo pipefail

SLEEP=2

printUsage() {
	echo "watch [-n SLEEP ] COMMAND"
}

main() {
	if [[ $# = 0 ]]; then usageAndExit; fi

	while [[ $# -gt 0 ]]
	do
		case "$1" in
			-n)
				SLEEP=$2
				shift
				;;
			*)
				break
				;;
			esac
		shift
	done

	COMMAND=$@

	start
}

start() {
	echo "$COMMAND"

	while :
	do
		clear
		echo "$COMMAND [${SLEEP} s]"
		echo ""
		eval "$COMMAND"
		sleep "$SLEEP"
	done
}

(main "$@")
