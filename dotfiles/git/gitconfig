[core]
	fileMode = false
	editor = vim
	whitespace = trailing-space
[user]
	name = Yui Nishizawa
	email = yui@exaptive.com
[push]
	default = nothing
[alias]
	# colors
	# - yellow: SHA1
	# - blue: branch
	# - red:
	# - green: author
	list = log --format=\"%C(yellow) %h %Cred %cr %C(green) %an %C(blue)%d %Creset %s  \" 
	ls = log -10 --format=\"%C(yellow) %h %Cred %cr %C(green) %an %C(blue)%d %Creset %s \" 
	lsg = log --graph 
	lp = log -p
	lst = log --stat

	#
	# Shortcuts
	#
	st = status
	b = branch
	c = commit
	co = checkout
	df = diff
	dc = diff --cached
	ai = add -i
	ca = commit --amend

	uncommit = reset --soft HEAD~
	last = log --stat -1 -p
	dfc = diff --cached
	clear = "!echo \"Changes:\"; git status --short --untracked-files=no; echo 'Clear all this? (y/n)'; read A; if [[ $A == 'y' ]]; then git reset --hard HEAD; fi"
	bv = branch -vv
	bva = branch -vv -a
	bd = branch -d
	test = "!fn() { echo \"Hello $@ There\"; }; fn"
	dfs = diff --stat
	upstream = "!f() { git branch --set-upstream-to=$1; }; f"
	bf = branch -f
	fo = fetch origin --prune
[credential]
	helper = store
[sendemail]
	#smtpencryption = ssl
	smtpserver = secure156.inmotionhosting.com
	smtpuser = yui@exaptive.com
	smtpserverport = 587
[merge]
	tool = vimdiff
	conflictstyle = diff3
[color]
	branch = 1
[gitreview]
	remote = origin
