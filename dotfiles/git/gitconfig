[core]
	fileMode = false
	editor = vim
	whitespace = trailing-space
[user]
	name = Yui Nishizawa
	email = yui@exaptive.com
	signingkey = 4A308600 
[push]
	default = nothing
[alias]
	# Config
	aliases = "! git config --get-regex 'alias.*' | sort"
	cls = config --list

	#
	# Shortcuts
	#
	st = status
	b = branch
	c = commit
	co = checkout
	df = diff
	dfword = diff --word-diff
	dt = difftool
	m = merge
	mt = mergetool
	f = fetch

	# colors
	# - yellow: SHA1
	# - blue: branch
	# - red:
	# - green: author
	lsa = log --format=\"%C(yellow) %h %Cred %cr %C(green) %G? %an %C(blue)%d %Creset %s  \" 
	ls = log -10 --format=\"%C(yellow) %h %Cred %cr %C(green) %G? %an %C(blue)%d %Creset %s \" 
	lg = log --graph 
	lp = log -p --show-signature
	lst = log --stat --show-signature
	last = log --stat -1 -p --show-signature
	
	dfc = diff --cached
	ai = add -i
	ap = add -p
	au = add --update
	cS = commit -S
	ca = commit --amend
	caS = commit --amend -S
	caa = commit --amend -a

	uncommit = reset --soft HEAD~
	clear = "!echo \"Changes:\"; git status --short --untracked-files=no; echo 'Clear all this? (y/n)'; read A; if [ "$A" = 'y' ]; then git reset --hard HEAD; fi"
	bv = branch -vv
	bva = branch -vv -a
	bd = branch -d
	test = "!fn() { echo \"Hello $@ There\"; }; fn"
	dfs = diff --stat
	upstream = "!f() { git branch --set-upstream-to=$1; }; f"
	bf = branch -f
	fo = fetch origin --prune --tags
	mm = merge origin/master

[credential]
	helper = store
[sendemail]
	#smtpencryption = ssl
	smtpserver = secure156.inmotionhosting.com
	smtpuser = yui@exaptive.com
	smtpserverport = 587
[merge]
	tool = vimdiff
	conflictstyle = diff3
[color]
	branch = 1
[gitreview]
	remote = origin
[diff]
	tool = vimdiff
[difftool]
	prompt = false
