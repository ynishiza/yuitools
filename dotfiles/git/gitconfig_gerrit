[alias]
    gfetch = fetch gerrit --prune
    gchange = "!f() { branch=$1; shift 1; git push gerrit HEAD:refs/for/$branch $@; }; f"
    gdraft = "!f() { branch=$1; shift 1; git push gerrit HEAD:refs/drafts/$branch $@; }; f"
    gcm = "!f() { git push gerrit HEAD:refs/for/master $@; }; f"
    gdm = "!f() { git push gerrit HEAD:refs/drafts/master $@; }; f"
